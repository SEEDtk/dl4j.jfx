<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.GridPane?>

<GridPane hgap="5.0" vgap="5.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.theseed.dl4j.jfx.JoinDialog">
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="500.0" />
   </rowConstraints>
   <columnConstraints>
      <ColumnConstraints minWidth="10.0" prefWidth="80.0" />
      <ColumnConstraints minWidth="10.0" prefWidth="200.0" />
      <ColumnConstraints minWidth="10.0" prefWidth="200.0" />
      <ColumnConstraints minWidth="10.0" prefWidth="200.0" />
      <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <children>
      <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="800.0" prefWidth="500.0" GridPane.columnSpan="5" GridPane.rowIndex="1">
         <content>
            <HBox fx:id="joinBox" prefHeight="500.0" prefWidth="400.0">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding></HBox>
         </content>
      </ScrollPane>
      <Label text="Output File" />
      <TextField fx:id="txtOutputFile" editable="false" styleClass="readOnly" stylesheets="@mods.css" GridPane.columnIndex="1" />
      <Button mnemonicParsing="false" onAction="#selectOutputFile" text="..." GridPane.columnIndex="2" />
      <HBox alignment="CENTER_LEFT" spacing="5.0" GridPane.columnIndex="3">
         <children>
            <Button mnemonicParsing="false" onAction="#addFileSpec" text="Add File" GridPane.columnIndex="3" />
            <CheckBox fx:id="chkLeftJoin" mnemonicParsing="false" text="Use Left Join" />
         </children>
      </HBox>
      <Button fx:id="btnJoinFiles" mnemonicParsing="false" onAction="#joinFiles" text="Join All Files" GridPane.columnIndex="4" />
   </children>
</GridPane>
